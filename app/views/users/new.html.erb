<% provide(:title, "新規登録") %>
<h1>ユーザ新規作成</h1>
<%= form_for(@user, :url => { :controller => :users, :action => :create }) do |f| %>
<table class="table">
  <tr>
    <td><%= f.label "ユーザ名" %></td>
    <td><%= f.text_field :name %></td>
  </tr>
  <tr>
    <td><%= f.label "ユーザID" %></td>
    <td><%= f.text_field :email %></td>
  </tr>
  <tr>
    <td><%= f.label "権限" %></td>
    <td><%= f.select :authority, User.authority.options %></td>
  </tr>
  <tr>
    <td><%= f.label "パスワード" %></td>
    <td><%= f.password_field :password %></td>
  </tr>
  <tr>
    <td><%= f.label "パスワード(確認)" %></td>
    <td><%= f.password_field :password_confirmation %></td>
  </tr>
</table>
<%= f.submit "新規作成", class: "btn btn-primary" %>
<% end %>
