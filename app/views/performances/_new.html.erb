<%= form_for(@performance_form, :url => { :controller => :performances, :action => :create }) do |f| %>
  <%= f.label "プロジェクト" %>

  <%= f.label "開始日時" %>
  <%= f.select :start_date, @date %>
  <%= f.select :start_time, @time %>

  <%= f.label "終了日時" %>
  <%= f.select :end_date, @date %>
  <%= f.select :end_time, @time%>

  <%= f.label "作業内容" %>
  <%= f.text_area :content %>

  <%= f.submit "稼働登録" %>
<% end %>
