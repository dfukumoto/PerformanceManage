<%= form_for(@project_form, :url => {:controller => :projects, action: :create}, method: "post" ) do |f| %>
  <table class="table">
    <tr>
      <td><%= f.label "プロジェクト名" %></td>
      <td><%= f.text_field :name %></td>
    </tr>
    <tr>
      <td><%= f.label "期間" %></td>
      <td>
        <%= f.select :start_date, create_date %>
        <%= f.select :end_date,   create_date %>
      </td>
    </tr>
    <tr>
      <td><%= f.label "受注先" %></td>
      <td>
        <%= f.text_field :order %>
      </td>
    </tr>
    <tr>
      <td><%= f.label "プロジェクトコード" %></td>
      <td>
        <%= f.text_field :project_code %>
      </td>
    </tr>
    <tr>
      <td><%= f.label "種別" %></td>
      <td>
        <%= f.select :group, ProjectGroup.all%>
      </td>
    </tr>
  </table>
  <%= f.submit "稼働登録", class: "btn btn-primary"%>
<% end %>
